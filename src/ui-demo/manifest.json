{
  "name": "demo",
  "appid": "",
  "description": "demo 演示工程",
  "networkTimeout": {
    "request": 15000,
    "connectSocket": 15000,
    "uploadFile": 15000,
    "downloadFile": 15000
  },
  "transformPx": false,
  "mp-weixin": {
    "appid": "",
    "setting": {
      "urlCheck": true,
      "minified": true,
      "postcss": true,
      "es6": true,
      "bigPackageSizeSupport": true
    },
    "usingComponents": true,
    "optimization": {
      "subPackages": true
    }
  },
  "h5": {
    "router": {
      "mode": "hash", //路由跳转模式，支持 hash|history ,默认 hash
      "base": "./" //应用基础路径，例如，如果整个单页应用服务在 /app/ 下，然后 base 就应该设为 "/app/"
    },
    "optimization": {
      "treeShaking": {
        "enable": true
      }
    },
    "devServer": {
      "open": false,
      "proxy": {
        "/dev-server": {
          "target": "",
          "ws": false, //增加websocket代理
          "changeOrigin": true, //是否需要跨域
          "pathRewrite": {
            //重定向url
            "^/dev-server": ""
          }
        }
      },
      "https": false
    }
  }
}
